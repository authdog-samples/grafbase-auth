{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "cache": false
    },
    "storybook": {
      "cache": false
    },
    "install": {
      "cache": false
    },
    "@authdog-samples/grafbase-web#dev": {
      "dependsOn": ["@authdog-samples/grafbase-ui#build"]
    }
  }
}
